document.addEventListener('DOMContentLoaded', function() {
    const subscribeForm = document.querySelector('.subscribe-form');
    if (subscribeForm) {
        subscribeForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const email = this.querySelector('input[name="email"]').value;
            const terms = this.querySelector('input[name="terms"]').checked;
            const button = this.querySelector('.subscribe-btn');
            const originalText = button.textContent;
            
            if (!terms) {
                if (typeof toastr !== 'undefined') {
                    toastr.error('Veuillez accepter les conditions d\'utilisation');
                }
                return;
            }
            
            // Show loading state
            button.textContent = 'Abonner...';
            button.disabled = true;
            
            // Simulate API call (replace with actual implementation)
            setTimeout(() => {
                // Reset button
                button.textContent = 'Abonnert!';
                button.style.background = 'var(--success-color)';
                
                // Show success message
                if (typeof toastr !== 'undefined') {
                    toastr.success('Takk for din abonnement!');
                }
                
                // Reset form
                this.reset();
                
                // Reset button after delay
                setTimeout(() => {
                    button.textContent = originalText;
                    button.style.background = '';
                    button.disabled = false;
                }, 3000);
            }, 1500);
        });
    }
});

// Language selector functionality
document.addEventListener('DOMContentLoaded', function() {
    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
        const languageSelector = document.querySelector('.language-selector');
        const languageDropdown = document.getElementById('languageDropdown');
        
        if (languageSelector && !languageSelector.contains(e.target)) {
            languageDropdown.classList.remove('show');
        }
    });
});

// Toggle language dropdown
function toggleLanguageDropdown() {
    const dropdown = document.getElementById('languageDropdown');
    if (dropdown) {
        dropdown.classList.toggle('show');
        
        // Add animation to dropdown arrow
        const arrow = document.querySelector('.dropdown-arrow');
        if (arrow) {
            if (dropdown.classList.contains('show')) {
                arrow.style.transform = 'rotate(180deg)';
            } else {
                arrow.style.transform = 'rotate(0deg)';
            }
        }
    }
}

// Function to change language with enhanced UX
function changeLanguage(languageCode) {
    // Show loading state
    const languageToggle = document.querySelector('.language-toggle');
    const currentLanguage = document.querySelector('.current-language');
    
    if (languageToggle && currentLanguage) {
        // Add loading animation
        languageToggle.style.pointerEvents = 'none';
        languageToggle.style.opacity = '0.7';
        
        // Update current language display immediately for better UX
        const languageNames = {
            'en': '{{ __("languages.en") }}',
            'fr': '{{ __("languages.fr") }}',
            'no': '{{ __("languages.no") }}'
        };
        
        currentLanguage.textContent = languageNames[languageCode] || 'English';
        
        // Close dropdown
        const dropdown = document.getElementById('languageDropdown');
        if (dropdown) {
            dropdown.classList.remove('show');
        }
        
        // Reset arrow
        const arrow = document.querySelector('.dropdown-arrow');
        if (arrow) {
            arrow.style.transform = 'rotate(0deg)';
        }
        
        // Create and submit form
        const form = document.createElement('form');
        form.method = 'GET';
        form.action = '{{ url("setlang") }}';
        
        const languageInput = document.createElement('input');
        languageInput.type = 'hidden';
        languageInput.name = 'lang';
        languageInput.value = languageCode;
        form.appendChild(languageInput);
        
        // Submit the form
        document.body.appendChild(form);
        form.submit();
    }
}
</script>